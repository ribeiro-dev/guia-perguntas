<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <% if (question) { %>
            <h1><%= question.titulo %></h1>
            <p><%= question.descricao %></p>

        <% } else {%>
            <h1>Ops! Pergunta n√£o encontrada</h1>
        <% } %>

        <form method="POST" action="/responder">
            <h3>Responda:</h3>

            <label for="corpo">Resposta:</label>
            <textarea class="form-control" name="body" placeholder="Digite sua resposta"></textarea>
            <input type="hidden" name="question" id="questionId" value="<%=question.id%>">
            <button class="btn btn-primary mt-2" type="submit">Enviar Resposta</button>
        </form>

        <hr>
        <h3>Respostas</h3>
        <hr>
        <% answers.forEach(answer => { %>
            <div class="card mb-4">
                <div class="card-body">
                    <p><%= answer.body %></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs') %>